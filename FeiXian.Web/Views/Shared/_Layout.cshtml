@using System;
@using NewLife.Common;
@{
    var cfg = NewLife.Common.SysConfig.Current;
    var title = ViewBag.Title + "";
    if (title != "" && !title.EndsWith(" - ")) { title += " - "; }
    title += cfg.DisplayName;
    var title2 = ViewBag.Title2 as String;
    if (!title2.IsNullOrEmpty()) { title += " - " + title2; }
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="@ViewBag.Lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-switch/bootstrap-switch.min.css" />
    <link rel="stylesheet" href="~/Content/cube.css" />
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">@cfg.DisplayName<sub>@cfg.Name</sub></a>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="~/">首页</a></li>
                    <li><a href="~/FeiXian.zip">下载飞仙</a></li>
                    <li><a href="http://git.newlifex.com/NewLife/FeiXian" target="_blank">源码</a></li>
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class=""><a href="~/Admin">管理后台</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div class="container footer">
        <div class="page-divider"></div>
        <div class="clearfix">
            <div class="pull-right btn-group dropup">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">@ViewBag.Language <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>zh-cn</li>
                    <li>en-us</li>
                    <li>fr-fr</li>
                </ul>
            </div>
            <div class="pull-left"><p class="muted">&copy; 2002-@DateTime.Now.Year @cfg.Company</p></div>
        </div>
    </div>

    <script src="~/Content/js/jquery-2.1.3.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/bootstrap-switch/bootstrap-switch.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
